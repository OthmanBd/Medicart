<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.technion.android.medicart.ViewPatientActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/search_layout"
        android:weightSum="100">
        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:hint="@string/id"
            android:id="@+id/id_edittext"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:layout_weight="100"
            android:background="@drawable/text_border_blue"
            android:layout_marginBottom="7dp"
            android:paddingLeft="5dp"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/profile"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/profile_button"
            android:onClick="view"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_red"
            android:layout_marginBottom="7dp"
            android:textColor="#FFF"
            android:textSize="10sp"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/view_imageview"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:id="@+id/name_view"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="5dp"
        android:id="@+id/id_view"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="5dp"
        android:id="@+id/height_view"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="5dp"
        android:id="@+id/weight_view"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="5dp"
        android:id="@+id/bloodtype_view"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="5dp"
        android:id="@+id/bloodpressure_view"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="5dp"
        android:id="@+id/doctorsname_view"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="5dp"
        android:id="@+id/allergies_view"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="5dp"
        android:id="@+id/diagnosis_view"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="5dp"
        android:id="@+id/prescription_view"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        />
    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:text="patient's log"
        android:onClick="viewLog"
        android:id="@+id/log_button"
        android:background="@drawable/button_blue"
        android:textColor="#FFF"
        android:textSize="10sp"
        android:visibility="gone"
        />


</LinearLayout>