<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_border">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/medical_date"
            android:text="Date"
            android:textColor="#000"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/medical_date"
            android:text="Time"
            android:textColor="#000"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="5dp"
            android:id="@+id/medical_time"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/medical_addedby"
            android:textStyle="bold"
            android:text="Added by"
            android:textColor="#000"
            android:layout_marginStart="5dp"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diagnosis"
            android:layout_below="@id/medical_allergies"
            android:layout_marginStart="5dp"
            android:textColor="#000"
            android:textStyle="italic"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:id="@+id/medical_diagnosis"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/medical_addedby"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_toStartOf="@id/medical_time"
            android:layout_marginEnd="10dp"
            android:textSize="17sp"
            android:text="Allergies"
            android:textStyle="italic"
            android:textColor="#000"
            android:id="@+id/medical_allergies"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>